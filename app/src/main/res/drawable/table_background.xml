<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#272727" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
        </shape>
    </item>


    <!-- Inner border to separate rows -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <stroke
                android:width="1dp"
                android:color="@color/black" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
